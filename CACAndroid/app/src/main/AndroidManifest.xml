<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rubick.cac.android" >

    <!-- 添加操作联系人的权限 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.Activity"
        >
        <activity
            android:name=".contact.ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".contact.ui.activity.CACMyCardsActivity"
            android:theme="@style/AppTheme.CACMyCards"
            android:screenOrientation="portrait"/>

        <activity android:name=".contact.ui.activity.CACMyCardsV1Activity"
            android:theme="@style/AppTheme.CACMyCards"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
